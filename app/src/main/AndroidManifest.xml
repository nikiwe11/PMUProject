<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/chat_time_icon"
        android:label="@string/app_name"
        android:logo="@drawable/chat_time_icon"
        android:roundIcon="@drawable/chat_time_icon"
        android:supportsRtl="true"
        android:name = ".data.injection.ChatApp"
        android:theme="@style/Theme.ChatApp"
        tools:targetApi="31">
        <activity
            android:name="com.example.chatapp.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".general.ChatAppFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>